//Python Part

from pyscript import Element, display

users = {
    "ryan": "psswrd123",
    "goataadi": "12345",
    "barca": "sextuple"
}

def login(_):
    username = Element("username").value
    password = Element("password").value

    if username in users and users[username] == password:
        # Display success message and trigger page reload 
        Element("output").element.innerHTML = "<b>Login successful!</b> Redirecting..."
        display(JS("""
            window.location.href = "https://github.com/idontshowspeed7/codefest2025skibidirizz/blob/main/homepage.html"; 
        """))
    else:
        Element("output").element.innerHTML = "<b>Invalid username or password.</b>"
