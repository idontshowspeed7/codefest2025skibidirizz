//HTML part


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://pyscript.net/releases/2022.12.1/pyscript.css" />
    <script defer src="https://pyscript.net/releases/2022.12.1/pyscript.js"></script>
    <title>Ecoforum Login</title>
</head>
<body>
    <h1 style="font-family: Helvetica; text-align: center;">
        Welcome to Ecoforum
    </h1>
    <h3 style="text-align: center;">
        Enter your Username and Password
    </h3>

    <div style="text-align: center;">
        <label for="username">Username:</label>
        <br>
        <input type="text" id="username" required>
        <br><br>
        <label for="password">Password:</label>
        <br>
        <input type="password" id="password" required>
        <br><br>
        <button id="login-btn" py-click="login()">Login</button>
    </div>
    <p id="output" style="text-align: center;"></p>
    <py-script src="./main.py"></py-script>
</body>
</html>







//Python Part

from pyscript import Element

users = {
    "ryan": "psswrd123",
    "goataadi": "12345",
    "barca": "sextuple"
}

def login(event=None):
    username = Element("username").value
    password = Element("password").value
    
    if username in users and users[username] == password:
        Element("output").element.innerHTML = f"""
            <b>Login successful!</b> Welcome, {username}!<br>
            <a href="homepage.html">Go to Homepage</a>
        """
    else:
        Element("output").element.innerHTML = """
            <b>Invalid username or password.</b><br>
            <a href="https://example.com/forgot-password" target="_blank">Forgot Password?</a>
        """

Element("login-btn").element.addEventListener("click", login)

